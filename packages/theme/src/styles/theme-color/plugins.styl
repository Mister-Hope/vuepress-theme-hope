component($themeColor)
  // 路径导航
  .breadcrumb a
    color $themeColor

  // 返回顶部按钮
  .back-to-top
    color $themeColor

    &:hover
      color lighten($themeColor, 30%)

  // 全屏按钮
  .fullscreen-wrapper
    .icon
      .fullScreen:hover, .cacelFullScreen
        color $themeColor

  .pagation-wrapper .pagation-list
    .btn-group
      div
        color $themeColor

        &:first-child
          &::before
            background-color transparent

        &:hover, &.active
          background $themeColor
          color #fff

          &::before
            background-color $themeColor

        &.active + div, &:hover + div
          &::before
            background-color $themeColor

    .navigateBtn:hover
      background $themeColor
      border-color $themeColor

  &.theme-dark .pagation-wrapper .pagation-list .btn-group div
    &:hover, &.active
      color #000

themeColor($themeColor)
  // 主题选择按钮
  .color-picker .color-button .skin-icon
    &:hover, &.select
      color $themeColor

comment($themeColor)
  .page
    // 评论按钮
    .valine-wrapper
      #valine
        a
          color $themeColor

          &:before
            background-color $themeColor

          &:hover
            color $themeColor

        .vwrap .vheader .vinput:focus
          border-color $themeColor

        .vwrap .vedit .vctrl span:hover
          color $themeColor

        .vlist .vcard .vhead .vnick
          color $themeColor

        .vbtn:active, .vbtn:hover
          color #fff
          background-color $themeColor

mdEnhance($themeColor)
  // flowchart 适配
  .md-flowchart
    &.loading
      backgound-color #080808

    svg.md-flowchart-loading-icon
      fill $themeColor

pwa($themeColor)
  // PWA
  .sw-update-popup
    .refresh
      background-color $themeColor
