sidebar($themeColor)
  // 侧边栏
  .sidebar-heading.clickable
    &.active
      color $themeColor
      border-left-color $themeColor

    &:hover
      color $themeColor

  .sidebar a
    color $textColor

  // 侧边栏链接
  a.sidebar-link
    &:hover
      color $themeColor

    &.active
      color $themeColor
      border-left-color $themeColor

  &.theme-dark
    a.sidebar-link
      color #9e9e9e

      &:hover
        color $themeColor

      &.active
        color $themeColor