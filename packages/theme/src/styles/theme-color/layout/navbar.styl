navbar($themeColor)
  .navbar
    .nav-links a
      color #666

    @media (min-width: $MQMobile)
      .nav-item > a, a.repo-link
        &:hover, &.router-link-active
          border-bottom 2px solid darken($themeColor, 15%)

        &.router-link-active
          color darken($themeColor, 15%)

  &.theme-dark
    .navbar
      .nav-links a
        color $nightTextColor

      @media (min-width: $MQMobile)
        .nav-links a.router-link-active
          color darken($themeColor, 15%)

  .sidebar
    .nav-links a
      &:hover, &.router-link-active
        color darken($themeColor, 15%)

  // 下拉列表
  .dropdown-wrapper
    .dropdown-title
      @media (max-width: $MQMobile)
        &:hover
          color darken($themeColor, 15%)

      .title:hover
        color darken($themeColor, 15%)

    .nav-dropdown .dropdown-item a
      &.router-link-active, &:hover
        color darken($themeColor, 15%)

      &.router-link-active::after
        border-left 5px solid $themeColor

  // 搜索框
  .search-box
    input
      color darken(desaturate($themeColor, 25%), 25%)
      background-size 1rem

      &:focus
        border-color $themeColor

    .suggestions
      background #fff

    .suggestion
      a
        color lighten(desaturate($themeColor, 25%), 25%)

      &.focused
        background-color #f3f4f5

        a
          color $themeColor

  @media (max-width: $MQNarrow)
    .search-box
      input
        border-color transparent

  // algolia serach
  .algolia-search-wrapper .algolia-autocomplete .algolia-docsearch-suggestion .algolia-docsearch-suggestion--category-header
    bgcolor()
