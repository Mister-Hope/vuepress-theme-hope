@require './config'
@require './layout/index'
@require './plugins'
@require './theme'

theme-color($themeColor, $colorName)
  .theme-{$colorName}
    base($themeColor)
    navbar($themeColor)
    sidebar($themeColor)
    home($themeColor)
    comment($themeColor)
    component($themeColor)
    mdEnhance($themeColor)
    pwa($themeColor)
    themeColor($themeColor)
    theme($themeColor)

for key, value in $colorPicker
  theme-color(value, key)
