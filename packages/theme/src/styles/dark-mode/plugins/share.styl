.theme-dark
  // 分享组件
  .share-ctn
    fontColor()
    background-color #000
    box-shadow -2px 1px 6px rgba(255, 255, 255, 0.08)

    .btn
      -webkit-tap-highlight-color rgba(0, 0, 0, 0)

    &:not({$prefix-class}-trigger):hover
      background-color rgba(67, 67, 67, 0.15)

  @media screen and (max-width: $MQMobile)
    .share-ctn
      box-shadow -1px 1px 3px rgba(255, 255, 255, 0.03)
