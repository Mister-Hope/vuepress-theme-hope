.theme-dark
  // 页面信息
  .page
    .page-info
      fontColor()

    & > span.active:hover
      cursor pointer
      color var(--accent-color)

    // valine 评论按钮
    .valine-wrapper
      #valine
        *
          color #aaa

        code, pre
          background-color #282c34

        blockquote
          color #999

        .vbtn
          bgColor()

          &:active, &:hover
            color #000
            background-color var(--accent-color)

        .vlist .vcard .vhead .vsys
          background #121212
          color #4c4e4e
