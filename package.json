{
  "name": "vuepress-theme-hope",
  "description": "a light vuepress theme",
  "private": true,
  "workspaces": [
    "docs/",
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "node scripts/bootstrap.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 2",
    "commit": "npx git-cz",
    "release": "node scripts/release.js",
    "lerna:bootstrap": "lerna bootstrap",
    "lerna:clean": "lerna clean",
    "packages:list": "lerna ls -l",
    "packages:diff": "lerna diff",
    "packages:changed": "lerna changed",
    "lint": "npm run lint:check --fix",
    "lint:check": "eslint --ext .js --ext .vue packages/",
    "comment:serve": "yarn workspace docs comment:serve",
    "comment:clean-serve": "yarn workspace docs comment:clean-serve",
    "comment:build": "yarn workspace docs comment:build",
    "theme:serve": "yarn workspace docs theme:serve",
    "theme:clean-serve": "yarn workspace docs theme:clean-serve",
    "theme:build": "yarn workspace docs theme:build",
    "share-utils:test": "yarn workspace @mr-hope/vuepress-shared-utils test",
    "theme-test:serve": "yarn workspace test theme-test:serve",
    "theme-test:clean-serve": "yarn workspace test theme-test:clean-serve",
    "theme-test:build": "yarn workspace test theme-test:build"
  },
  "devDependencies": {
    "@vue/eslint-config-prettier": "^5.0.0",
    "conventional-changelog-cli": "^2.0.25",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-vue": "^6.0.0",
    "husky": "^3.0.9",
    "lerna": "^3.18.4",
    "lint-staged": "^9.4.2",
    "prettier": "1.18.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}